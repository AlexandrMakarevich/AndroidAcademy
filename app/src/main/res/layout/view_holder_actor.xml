<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fill">

    <ImageView
        android:id="@+id/image_actor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/mark_ruffalo"
        android:layout_marginTop="4dp"
        tools:srcCompat="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/text_view_actor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/robert_down"
        android:textAppearance="@style/storyLine"
        app:layout_constraintStart_toStartOf="@+id/image_actor"
        app:layout_constraintEnd_toEndOf="@+id/image_actor"
        app:layout_constraintTop_toBottomOf="@+id/image_actor"
        />


</androidx.constraintlayout.widget.ConstraintLayout>