<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fill"
    tools:context=".FragmentMovieDetails">

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:scaleType="centerCrop"
        android:src="@drawable/orig"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:background="@drawable/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:alpha="0.5"
        android:lineSpacingExtra="2sp"
        android:text="@string/back"
        android:textAppearance="@style/back"
        app:layout_constraintStart_toStartOf="@+id/title_image"
        app:layout_constraintTop_toTopOf="@+id/title_image" />

    <TextView
        android:layout_width="6dp"
        android:layout_height="16dp"
        android:layout_marginTop="56dp"
        android:alpha="0.5"
        android:lineSpacingExtra="2sp"
        android:text="@string/arrowBack"
        android:textAppearance="@style/back"
        app:layout_constraintEnd_toStartOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/title_image" />

    <TextView
        android:id="@+id/thirteen_plus"
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="226dp"
        android:background="@drawable/rectangle"
        android:text="@string/thirteen"
        android:textAppearance="@style/some_id"
        app:layout_constraintStart_toStartOf="@+id/title_image"
        app:layout_constraintTop_toTopOf="@+id/title_image" />

    <TextView
        android:id="@+id/avengers"
        android:layout_width="343dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="0sp"
        android:text="@string/avengers"
        android:textAppearance="@style/avengers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirteen_plus" />

    <TextView
        android:id="@+id/tag"
        android:layout_width="343dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/tag"
        android:textAppearance="@style/tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avengers" />

    <View
        android:id="@+id/star_icon1"
        android:layout_width="13.02dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_baseline_star_24_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tag" />

    <View
        android:id="@+id/star_icon2"
        android:layout_width="13.02dp"
        android:layout_height="12dp"
        android:layout_marginStart="3.25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_baseline_star_24_"
        app:layout_constraintStart_toEndOf="@+id/star_icon1"
        app:layout_constraintTop_toBottomOf="@+id/tag" />

    <View
        android:id="@+id/star_icon3"
        android:layout_width="13.02dp"
        android:layout_height="12dp"
        android:layout_marginStart="3.25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_baseline_star_24_"
        app:layout_constraintStart_toEndOf="@+id/star_icon2"
        app:layout_constraintTop_toBottomOf="@+id/tag" />

    <View
        android:id="@+id/star_icon4"
        android:layout_width="13.02dp"
        android:layout_height="12dp"
        android:layout_marginStart="3.25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_baseline_star_24_"
        app:layout_constraintStart_toEndOf="@+id/star_icon3"
        app:layout_constraintTop_toBottomOf="@+id/tag" />

    <View
        android:id="@+id/star_icon5"
        android:layout_width="13.02dp"
        android:layout_height="12dp"
        android:layout_marginStart="3.25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toEndOf="@+id/star_icon4"
        app:layout_constraintTop_toBottomOf="@+id/tag" />

    <TextView
        android:id="@+id/review"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8.89dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:text="@string/review"
        android:textAppearance="@style/review"
        app:layout_constraintStart_toEndOf="@+id/star_icon5"
        app:layout_constraintTop_toBottomOf="@+id/tag" />

    <TextView
        android:id="@+id/storyLine"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/storyLine"
        android:textAppearance="@style/storyLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review" />

    <TextView
        android:id="@+id/after_the_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.75"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:text="@string/after_the_d"
        android:textAppearance="@style/after_the_d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storyLine" />

    <TextView
        android:id="@+id/cast"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/cast"
        android:textAppearance="@style/storyLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/after_the_d" />

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W, 1:1"
        android:layout_marginTop="7dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/robert_downey_jr"
        app:layout_constraintEnd_toStartOf="@+id/icon2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cast" />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W, 1:1"
        android:layout_marginTop="7dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/chris_evans"
        app:layout_constraintEnd_toStartOf="@+id/icon3"
        app:layout_constraintStart_toEndOf="@+id/icon1"
        app:layout_constraintTop_toBottomOf="@+id/cast" />

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W, 1:1"
        android:layout_marginTop="7dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/mark_ruffalo"
        app:layout_constraintEnd_toStartOf="@+id/icon4"
        app:layout_constraintStart_toEndOf="@+id/icon2"
        app:layout_constraintTop_toBottomOf="@+id/cast" />

    <ImageView
        android:id="@+id/icon4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W, 1:1"
        android:layout_marginTop="7dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/chris_hemsworth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon3"
        app:layout_constraintTop_toBottomOf="@+id/cast" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="@string/robert_down"
        android:textAppearance="@style/storyLine"
        app:layout_constraintEnd_toStartOf="@+id/tv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon1" />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="@string/chrisEvans"
        android:textAppearance="@style/storyLine"
        app:layout_constraintEnd_toStartOf="@+id/tv3"
        app:layout_constraintStart_toEndOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/icon2" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="@string/markRuffalo"
        android:textAppearance="@style/storyLine"
        app:layout_constraintEnd_toStartOf="@+id/tv4"
        app:layout_constraintStart_toEndOf="@+id/tv2"
        app:layout_constraintTop_toBottomOf="@+id/icon3" />
    <TextView
        android:id="@+id/tv4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="@string/chrisHemsworth"
        android:textAppearance="@style/storyLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv3"
        app:layout_constraintTop_toBottomOf="@+id/icon4" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>